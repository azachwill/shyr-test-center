      <span class='no'>output</span>$<span class='no'>verb</span> <span class='kw'>&lt;-</span> <span class='fu'><a href='renderPrint.html'>renderText</a></span>({ <span class='no'>input</span>$<span class='no'>txt</span> })
    }
  )
}</pre>
